{% extends 'base.html.twig' %}

{# {% block title %}Chaussure index{% endblock %} #}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-center text-primary">Liste des Utilisateurs</h2>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4>Gestion des Utilisateurs</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-responsive" id="dataTables-example">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Nom</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in users %}
                                <tr>
                                    <td>{{ user.username }}</td>
                                     <td>{{ user.Phone }}</td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Aucune utilisateur trouv√©e</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}
