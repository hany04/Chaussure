{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header text-white" style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
                    <h2 class="mb-0">Détails de la Commande</h2>
                </div>
                <div class="card-body p-4">
                    <h4 class="mb-4 text-secondary">Informations sur la commande</h4>
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" class="text-muted" style="width: 30%;">Quantité</th>
                                <td class="text-dark">{{ commande.quantite }}</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-muted">Prix</th>
                                <td class="text-dark">{{ commande.Prix }} DT</td>
                            </tr>
                            <tr>
                                <th scope="row" class="text-muted">Date</th>
                                <td class="text-dark">{{ commande.date ? commande.date|date('Y-m-d H:i:s') : 'Non définie' }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-start mt-4">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                        {{ include('commande/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f7fc; /* Fond léger pour un aspect moderne */
        font-family: 'Poppins', sans-serif; /* Police moderne et élégante */
    }

    .card {
        border-radius: 16px; /* Coins arrondis pour un effet moderne */
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: 600;
        border-radius: 16px 16px 0 0; /* Coins arrondis pour l'en-tête uniquement */
        padding: 20px;
    }

    .card-body {
        font-size: 1rem;
        line-height: 1.8;
        background-color: #ffffff;
    }

    th {
        font-weight: 500;
        font-size: 1rem;
    }

    td {
        font-weight: 600;
        font-size: 1rem;
    }

    table {
        margin-top: 10px;
    }

    .btn {
        border-radius: 12px; /* Coins arrondis pour les boutons */
        font-weight: 500;
    }

    .btn-light {
        color: #6a11cb;
        border: 1px solid #ddd;
    }

    .btn-light:hover {
        background-color: #f4f7fc;
        color: #2575fc;
    }

    .btn-success {
        background: linear-gradient(90deg, #43e97b, #38f9d7); /* Dégradé pour un effet plus beau */
        color: white;
    }

    .btn-success:hover {
        background: linear-gradient(90deg, #38f9d7, #43e97b);
        color: white;
    }

    .btn-sm {
        padding: 8px 16px;
    }

    .shadow-lg {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .text-muted {
        color: #6c757d !important;
    }

    .text-secondary {
        color: #6a11cb !important;
    }
</style>
{% endblock %}
